<h1>Create a Post</h1>

<%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :body %>
  <%= f.text_area :body %>
  <br />
<br />
  <div>
    <%= f.label :category %>
    <br />
    <%= f.collection_select :category_id, Category.all, :id, :title %>
  </div>

<br />
  <div>
    Tags:  <%= f.collection_select(
        :tag_ids, Tag.all, :id, :name, {},
        {multiple: true, class: 'chosen-select'}
      ) %>
  </div>
  <br />

  <%= f.submit %>

<% end %>

<script>
  $('.chosen-select').chosen({width: '300px'})

</script>
